<Application x:Class="PL.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:PL.Converters"
             xmlns:local="clr-namespace:PL"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <!--Sources-->
        <!--Filters-->
        <local:ChefExperiencesCollection x:Key="ChefExperiencesCollectionKey"/>
        <local:ChefExperiencesCollectionFilter x:Key="ChefExperiencesCollectionKeyFilter"/>
        <local:StatusCollectionFilter x:Key="StatusCollectionFilterKeyFilter"/>
        <converters:ConvertIdToContent x:Key="ConvertIdToContentConverter"/>
        <converters:ConvertIdToEnabled x:Key="ConvertIdToEnabledConverter"/>
        <converters:ConvertDateTimeToString x:Key="ConvertDateTimeToStringConverter"/>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#FFB7BABA"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
    </Application.Resources>
</Application>
